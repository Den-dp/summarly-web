<!DOCTYPE html>
<html>
<head>
    <title><%= title %></title>
    <link rel="stylesheet" href="css/bootstrap.min.css"/>
    <script src="js/jquery.js"></script>
</head>
<body>
<div class="container-fluid">
    <div class="row">
        <div class="col-xs-12">
            <div class="form">
                <div class="form-group">
                    <input type="text" class="form-control" id="urlField" placeholder="Enter url">
                </div>
                <div class="form-group">
                    <textarea id="textField" class="form-control" rows="3"></textarea>
                </div>

                <button id="summarlyField" type="submit" class="btn btn-default">Submit</button>
            </div>
        </div>
    </div>
</div>

<script>
    $(function () {
        $('#summarlyField').click(function(){
            var data = {'articleUrl': $('#urlField').val()};
            $.ajax({
                type: 'POST',
                url: 'http://summarly-api.herokuapp.com/summarly',
                crossDomain: true,
                data: data,
                dataType: 'json',
                success: function (responseData, textStatus, jqXHR) {
                    console.log(responseData);
                },
                error: function (responseData, textStatus, errorThrown) {
                    console.log('POST failed.');
                }
            })
        });
    });
</script>
</body>
</html>
